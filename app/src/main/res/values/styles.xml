<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <!-- colorAccent sets color of SearchView and cursor -->
        <item name="colorAccent">@color/accent_color</item>

    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.Borderless">
        <!-- Customize button here -->

        <item name="android:background">@drawable/button_pressed</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="CustomAboutButton" parent="Widget.AppCompat.Button.Borderless">
        <!-- Customize button here -->

        <item name="android:background">@drawable/button_pressed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomListView" parent="Widget.AppCompat.ListView">
        <item name="android:listSelector">@drawable/list_view_selection</item>
    </style>

</resources>
