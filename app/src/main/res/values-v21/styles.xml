<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <!-- colorAccent sets color of SearchView and cursor -->
        <item name="colorAccent">@color/accent_color</item>

        <!-- colorControlNormal sets scrollbar color -->
        <item name="android:colorControlNormal">@color/accent_color</item>

        <!-- colorControlHighlight sets ListView selection & reveal color -->
        <item name="android:colorControlHighlight">@color/accent_color</item>

    </style>

    <style name="CustomButton" parent="android:Widget.Material.Button.Borderless">
        <!-- Customize button here -->

        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="CustomSettingButton" parent="android:Widget.Material.Button.Borderless">
        <!-- Customize button here -->

        <item name="android:textColor">@color/white</item>
    </style>

</resources>